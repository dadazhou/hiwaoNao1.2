<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ip"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:hint="IP:"/>
        <EditText
            android:id="@+id/port"
            android:layout_width="280px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:hint="Port:"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ip2"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:hint="IP:"/>
        <EditText
            android:id="@+id/port2"
            android:layout_width="280px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:hint="Port:"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/text_in"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:hint="请输出您想让nao说的话！"/>
        <Button
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_button"
            android:hint="@string/button_textsend" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:id="@+id/connect_button"
            android:hint="@string/button_connect" />

        <Button
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:id="@+id/disconnect_button"
            android:hint="@string/button_disconnect" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.91">
        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="小苹果"
            android:id="@+id/cmdbutton_xpg"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="介绍"
            android:id="@+id/cmdbutton_zwjs"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="站起来"
            android:id="@+id/cmdbutton_zql"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="蹲下"
            android:id="@+id/cmdbutton_dx"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="灌篮"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="4" />

        <Button
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:text="眨眼"
            android:id="@+id/cmdbutton_flash"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="前进"
            android:id="@+id/cmdbutton_qj"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="左移"
            android:id="@+id/cmdbutton_zy"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="后退"
            android:id="@+id/cmdbutton_ht"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="右移"
            android:id="@+id/cmdbutton_yy"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="左转"
            android:id="@+id/cmdbutton_zz"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="右转"
            android:id="@+id/cmdbutton_yz"
            android:layout_row="4"
            android:layout_column="3" />

    </GridLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="stop"
            android:id="@+id/stop"
            android:layout_row="25"
            android:layout_column="0"
            android:layout_columnSpan="14" />

    </LinearLayout>




</LinearLayout>
